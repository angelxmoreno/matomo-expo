{
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ],
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext"
  }
}
